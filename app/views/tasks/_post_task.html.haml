.contents.row
  .container
    .container-inner
      = form_with(model: @task, local: true) do |f|
        .posting-task
          Share task
        .posting-task__task-content
          = f.text_area :task, placeholder: "taskを入力してください" , required: ""
        .posting-task__task-state
          %label Task State
          = f.select :state, Task.states.keys, { required: "" }
          .adjust-space
          = f.date_field :limit_date, required: ""
        .posting-task__submit
          = f.submit "SEND" 