.contents.row
  .container
    .container-inner
      = form_with(model: @task, local: true) do |f|
        .posting-task
          Edit task
        .posting-task__task-content
          = f.text_area :task, placeholder: "taskを入力してください" , required: ""
        .posting-task__info-bar
          .state
            Task Srate
          .limit
            Limit
        .posting-task__input-task
          .input-state
            = f.select :state, Task.states.keys, { required: "" }
          .input-limit
            = f.date_field :limit_date, required: ""
        .posting-task__submit
          = f.submit "SEND"
          = link_to "delete", task_path(@task.id), method: :delete, data: { confirm: '本当に削除しますか？' }
