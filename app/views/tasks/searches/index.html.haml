= form_with(url: tasks_searches_path, local: true, method: :get, class: "search-form") do |f|
  = f.text_field :keyword, placeholder: "Search for tasks", class: "search-input"
  = f.submit "Search", class: "search-btn"
.contents.row
  - @tasks.each do |t|
    = render partial: "tasks/task", locals: { t: t }