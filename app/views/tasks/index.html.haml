.tasks
  .main-table
    %ul
      - if user_signed_in?
        %li
          = link_to "Share task", "/tasks/new", class: "post-task"
        %li
          = link_to "My task", "/users/#{current_user.id}", class: "my-page"
      - else
        %li
          = link_to "Share task", new_user_session_path, class: "post-task"
        %li
          = link_to "Sing up", new_user_registration_path, class: "my-page"
  - @tasks.each do |t|
    = render partial: "task", locals: { t: t }
  = paginate(@tasks)
