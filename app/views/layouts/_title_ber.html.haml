.title-bar
  .title-box
    .title-box-inner
      .title-name
        %a(href="/")
          .our-task our task
      - if user_signed_in?
        %ul.user-sign-in
          %li
            %a#current_user.new(href="/users/#{current_user.id}")
              %span#current_user.new= current_user.nickname
          %li
            = link_to "Log Out", destroy_user_session_path, method: :delete, class: 'log-out'
      - else
        %ul.user-sign-in
          %li
            = link_to "Sign up", new_user_registration_path, class: 'new', id: 'up'
          %li
            = link_to "Log in", new_user_session_path, class: 'log-in'